generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("TEACHER_DATABASE_URL")
}

model Teacher {
  id        String   @id @default(uuid())
  fullName  String
  dob       DateTime
  gender    String
  email     String   @unique
  phone     String
  address   String
  subjects  String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  classes   String[]
}
