generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("STUDENT_DATABASE_URL")
}

model Student {
  id              String   @id @default(uuid())
  fullName        String
  dob             DateTime
  email           String
  gender          String?
  class           String
  section         String
  rollNumber      String  
  guardianName    String
  guardianContact String
  address         String?
  createdBy       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
