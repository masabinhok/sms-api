generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("ACADEMICS_DATABASE_URL")
}

model Class {
  id Int @id @default(autoincrement())
  name String
  subjects Subject[]
  students String[]
  teachers String[] //assign class to teachers
}

model Subject {
  id Int @id @default(autoincrement())
  name String
  classId Int?
  class Class? @relation(fields: [classId], references: [id])
  teachers String[] //assign subject to teachers.
}