# Frontend URL
FRONTEND_URL=

# Kafka Configuration
# Comma-separated list of Kafka broker addresses
# Development: localhost:9094,localhost:9095,localhost:9096
# Production: kafka1.example.com:9092,kafka2.example.com:9092,kafka3.example.com:9092
KAFKA_BROKERS=localhost:9094,localhost:9095,localhost:9096

# Kafka Client ID (optional, defaults to 'sms-api')
KAFKA_CLIENT_ID=sms-api

# Kafka Error Handling & Resilience
# Request timeout in milliseconds (default: 5000)
KAFKA_REQUEST_TIMEOUT=5000

# Number of retry attempts for failed requests (default: 2)
KAFKA_RETRY_ATTEMPTS=2

# Delay between retries in milliseconds (default: 1000)
KAFKA_RETRY_DELAY=1000

# Circuit breaker failure threshold (default: 5)
KAFKA_CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker timeout/reset duration in milliseconds (default: 60000 = 1 minute)
KAFKA_CIRCUIT_BREAKER_TIMEOUT=60000